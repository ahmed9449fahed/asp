@using DartProjekt.Controllers
@using DartProjekt.Models

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StartGame</title>
</head>
<body style="background-color:black">
    <form method="POST" action="StartGame">
        <table  style="width: 100%; font-size: 22px;color:orange">
            <tr>
                @foreach (PLayersInfos player in ViewBag.playersinfo)
                {
                    <th>@player.VorName @player.NachName</th>
                }
               
            </tr>
            <tr>
                @foreach (Resultsinfo resultsinfo in ViewBag.resultsinfo)
                {
                    <td><label>@resultsinfo.Rest</label></td>
                }
            </tr>
          @for (int i = 0; i < ViewBag.maxresultscount; i++)
          {
              <tr>
                  @foreach (Resultsinfo resultsinfo in ViewBag.resultsinfo)
                  {
                      if (i < @resultsinfo.Results.Count)
                      {
                          int x = resultsinfo.Results[i];
                        <td><label>@x</label></td>
                      }

                  }
              </tr>
          }
            <tr>
                @foreach (PLayersInfos player in ViewBag.playersinfo)
                {
                    <th><input type="number" name="txtvalue+@player.Id" width="50" value=""/></th>
                }
            </tr>
        </table>
        <br /><br />
        <button type="submit" style="width: 50px; color:aliceblue;background-color:orange">Enter</button>
    </form>
</body>
</html>
