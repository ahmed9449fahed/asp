@model IEnumerable<Tb_Berüf>
@using GridMvc.Html
@{
    ViewBag.Title = "Works";
}
<html>
<head>
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>
    <style>
        body {
            background-image: url("http://www.intrawallpaper.com/static/images/White-Background-9B1.jpg");
            background-size: cover;
        }
    </style>
</head>

<body>
    <div class="code-cut" style="position: absolute; left: 200px; right: 200px; top: 100px; bottom: 100px">

        @Html.Grid(Model).Columns(columns =>
   {
       columns.Add(c => c.Name).Titled("Name").Filterable(true);
       columns.Add(c => c.Beruf).Titled("Beruf").Filterable(true);
       columns.Add(c => c.CompanyName).Titled("CompanyName").Filterable(true);
       columns.Add(c => c.Describe).Titled("Describe").Filterable(true);
       columns.Add(c => c.Adress).Titled("Adress").Filterable(true);
       columns.Add(c => c.Email).Titled("Email").Filterable(true);
       columns.Add().Encoded(false).Sanitized(false).SetWidth(10).RenderValueAs(o => Html.ActionLink("Edit", "Edit",

           new
           {
               ID = o.ID,
               Email = o.UsersEmail,
               FirstName = o.Name,
               Work = o.Beruf,
               Company = o.CompanyName,
               Descrebtion = o.Describe,
               Adress = o.Adress,
               Telefon = o.TelephoneNumber,
               WebSite = o.Email
           }));
       columns.Add().Encoded(false).Sanitized(false).SetWidth(10).RenderValueAs(o => Html.ActionLink("Delete", "Delete",

           new
           {
               ID = o.ID,
               
           }));

   }).WithPaging(10).Sortable(true);)
        

    </div>
    <form method="GET" action="AddNewBeruf">
        <textarea style="width:200px" name="Name" rows="1">@ViewBag.FirstName</textarea>
        <textarea style="width:200px" name="Email" rows="1">@ViewBag.Email</textarea>

        <button style="width:200px" type="submit">Add New</button>
    </form>
</body>



</html>